extends ../layout/index

block contenido
    div.py10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            spam.font-normal Raices
        h2.text-center.txt2xl.font.extrabold= pagina

        if errores
            div(class= "max-w-md mx-auto my-10")
                each error in errores                
                    p(class = "text-white uppercase text-xs text-center p-2 mb-1 font-bold bg-red-600")= error.msg
                    

        div(class= "mt-8 mx-auto max-w-md")
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.txt-sm.uppercase.txt-gray500.mb2.fontbold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="txt" name="nombre" value=usuario ? usuario.nombre : '')
                    div 
                        label.block.txt-sm.uppercase.txt-gray500.mb2.fontbold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value=usuario ? usuario.email : '')

                    div 
                        label.block.txt-sm.uppercase.txt-gray500.mb2.fontbold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                    
                    div 
                        label.block.txt-sm.uppercase.txt-gray500.mb2.fontbold(for="repetir_password") Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="repetir_password")

                    div.flex.items-center.justify-between
                        a.txt-gray-500.txt-xs.cursor-pointer(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.txt-gray-500.txt-xs.cursor-pointer(href="/auth/olvide-password") Olvide mi assword

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")